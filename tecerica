            box-shadow: 0 5px 15px rgba(231,76,60,0.3);
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.05); }
            100% { transform: scale(1); }
        }

        #start-btn:hover {
            background: #c0392b;

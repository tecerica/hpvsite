            animation: showQuestion 0.5s forwards;
        }

        @keyframes showQuestion {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        h2 {
            color: #2c3e50;
            margin-bottom: 25px;
            font-size: 1.4em;
        }

        .options button {
            display: block;
            width: 100%;
            padding: 15px 25px;
            margin: 12px 0;
            background: white;
            border: 2px solid #3498db;
            border-radius: 10px;
            cursor: pointer;
            text-align: left;
            transition: all 0.2s ease;
            font-size: 1em;
            position: relative;
            overflow: hidden;
        }

        .options button:hover {
            background: #3498db;
            color: white;
            transform: translateX(10px);
        }

        .options button.selected {
            background: #3498db;
            color: white;
            border-color: #2980b9;
        }

        .navigation {
            display: flex;
            justify-content: space-between;
            margin-top: 25px;
            gap: 15px;
        }

        .nav-btn {
            padding: 12px 35px;
            border: none;
            border-radius: 8px;

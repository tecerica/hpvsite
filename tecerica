<body>
    <div class="container">
        <div class="header">
            <img src="https://cdn-icons-png.flaticon.com/512/9082/9082686.png" alt="Ícone HPV">
            <h1>Quiz sobre HPV</h1>
            <p>Teste seus conhecimentos sobre o Papilomavírus Humano</p>
             <p>Desenvolvido por Érica Barbosa -ENF-68
            <button id="start-btn">▶ Iniciar Quiz</button>
        </div>

        <div class="quiz-container">
            <div class="progress">
                <div class="progress-bar" style="width: 0%"></div>
            </div>

            <div class="score" style="display: none;">
                <h2>Seu Resultado:</h2>
                <p>Você acertou <span id="total-score">0</span> de <span id="total-questions">0</span> questões!</p>
                <p id="result-message"></p>
            </div>
        </div>
    </div>

    <script>
        const questions = [
            {
                question: "O que significa a sigla HPV?",
                options: ["Herpes Posterior Viral", "Human Papilloma Virus", "Hepatite Papilomatosa Viral", "Hemograma Positivo Viral"],
                correct: 1
            },
            {
                question: "Como o HPV é geralmente transmitido?",
                options: ["Pelo ar", "Por alimentos contaminados", "Pelo contato sexual", "Por picadas de insetos"],
                correct: 2
            },
            {
                question: "Qual é uma complicação grave associada ao HPV?",
                options: ["Gripe", "Câncer de colo do útero", "Diabetes", "Hepatite"],
                correct: 1
            },
            {
                question: "O HPV pode afetar apenas mulheres?",
                options: ["Sim", "Não", "Apenas em casos raros", "Depende da idade"],
                correct: 1
            },
            {
                question: "Existe vacina contra o HPV?",
                options: ["Sim", "Não", "Apenas para homens", "Apenas após os 40 anos"],
                correct: 0
            },
            {
                question: "A vacina contra HPV é mais eficaz quando tomada:",
                options: ["Após os 30 anos", "Durante uma infecção", "Antes do início da vida sexual", "Em jejum"],
                correct: 2
            },
            {
                question: "Quantos tipos de HPV existem aproximadamente?",
                options: ["Mais de 100", "Apenas 10", "Cerca de 5", "50 no máximo"],
                correct: 0
            },
            {
                question: "Qual exame ajuda a detectar lesões causadas pelo HPV em mulheres?",
                options: ["Exame de sangue", "Raio-X", "Papanicolau", "Ultrassom"],
                correct: 2
            },
            {
                question: "Homens também devem se vacinar contra o HPV?",
                options: ["Não é necessário", "Sim, para se proteger e proteger parceiros", "Apenas se estiverem doentes", "A vacina é só para mulheres"],
                correct: 1
            },
            {
                question: "O HPV tem cura?",
                options: ["Sim, com antibióticos", "Alguns tipos são eliminados pelo corpo naturalmente", "Somente com cirurgia", "Não existe nenhum tratamento"],
                correct: 1
            },
            {
                question: "O uso de preservativos reduz o risco de transmissão do HPV?",
                options: ["Sim, embora não elimine totalmente o risco", "Não faz diferença", "Só se for preservativo feminino", "Apenas com lubrificante"],
                correct: 0
            }
        ];

        let currentQuestion = 0;
        let score = 0;
        const totalQuestions = questions.length;

        document.getElementById('start-btn').addEventListener('click', () => {
            document.querySelector('.header').style.display = 'none';
            const container = document.querySelector('.quiz-container');
            container.style.display = 'block';
            document.getElementById('total-questions').textContent = totalQuestions;
            loadQuestions();
            showQuestion(currentQuestion);
        });

        function loadQuestions() {
            const container = document.querySelector('.quiz-container');
            const scoreDiv = container.querySelector('.score');
            questions.forEach((q, i) => {
                const qDiv = document.createElement('div');
                qDiv.className = 'question';
                qDiv.innerHTML = `
                    <h2>${i + 1}. ${q.question}</h2>
                    <div class="options">
                        ${q.options.map(opt => `<button>${opt}</button>`).join('')}
                    </div>
                    <div class="navigation">
                        <button class="nav-btn prev-btn">◀ Voltar</button>
                        <button class="nav-btn next-btn">Avançar ▶</button>
                    </div>
                `;
                container.insertBefore(qDiv, scoreDiv);
            });
        }

        function showQuestion(index) {
            document.querySelectorAll('.question').forEach((q, i) => {
                q.style.display = i === index ? 'block' : 'none';
                q.classList.toggle('active', i === index);
            });

            const progress = ((index + 1) / totalQuestions) * 100;
            document.querySelector('.progress-bar').style.width = `${progress}%`;

            const currentQ = document.querySelector('.question.active');
            currentQ.querySelector('.next-btn').style.display = 'none';
            currentQ.querySelectorAll('.options button').forEach(btn => {
                btn.classList.remove('selected');
                btn.disabled = false;
            });
        }

        document.addEventListener('click', (e) => {
            if (e.target.closest('.options button')) {
                const questionDiv = e.target.closest('.question');
                const buttons = questionDiv.querySelectorAll('.options button');
                buttons.forEach(btn => {
                    btn.classList.remove('selected');
                    btn.disabled = true;
                });
                e.target.classList.add('selected');
                questionDiv.querySelector('.next-btn').style.display = 'block';
            }

            if (e.target.closest('.prev-btn')) {
                if (currentQuestion > 0) {
                    currentQuestion--;
                    showQuestion(currentQuestion);
                }
            }

            if (e.target.closest('.next-btn')) {
                const questionDiv = e.target.closest('.question');
                const selected = questionDiv.querySelector('.options button.selected');
                
                if (selected) {
                    const selectedIndex = Array.from(selected.parentElement.children).indexOf(selected);
                    if (selectedIndex === questions[currentQuestion].correct) score++;
                    
                    currentQuestion++;
                    if (currentQuestion < totalQuestions) {
                        showQuestion(currentQuestion);
                    } else {
                        showResults();
                    }
                }
            }
        });

        function showResults() {
            const errors = totalQuestions - score;
            let resultImage = '';
            let phrase = '';

            if (score === totalQuestions) {
                resultImage ='https://static.vecteezy.com/system/resources/previews/024/044/244/original/happy-nurse-clipart-transparent-background-free-png.png'
                phrase = 'Parabéns! Você é um expert em prevenção! 🏆';
            } else if (errors === 1) {
                resultImage = 'https://th.bing.com/th/id/OIP.WPByF2C7M9xj2DDnHLepwwAAAA?rs=1&pid=ImgDetMain';
                phrase = 'Quase perfeito! Continue aprendendo! 🎯';
            } else if (errors === 2) {
                resultImage = 'https://th.bing.com/th/id/R.3878e703524e9719a5558696470eacc8?rik=ypWyCwynEX8pFg&pid=ImgRaw&r=0';
                phrase = 'Bom resultado! Você está no caminho certo! 💪';
            } else {
                phrase = 'Hora de se informar melhor! 📚';
            }

            const resultsHTML = `
                <div class="score">
                    <h2>🎉 Seu Resultado:</h2>
                    ${resultImage ? `<img src="${resultImage}" class="result-image" alt="Resultado">` : ''}
                    <p>Você acertou ${score} de ${totalQuestions} questões!</p>
                    <p>${getResultMessage()}</p>
                    <p><strong>${phrase}</strong></p>
                    <button onclick="location.reload()" class="nav-btn" style="background: #3498db; margin-top: 15px;">Refazer Quiz</button>
                </div>
                <img src="https://th.bing.com/th/id/OIP.YBAGbhYI8kJIqukk1OENJQHaHa?pid=ImgDet&w=151&h=151&c=7" 
                     title="Consulte sempre profissionais de saúde!">
            `;

            document.querySelector('.quiz-container').innerHTML = resultsHTML;
        }

        function getResultMessage() {
            const percentage = (score / totalQuestions) * 100;
            if (percentage >= 90) return "Excelente! Seu conhecimento ajuda na prevenção!";
            if (percentage >= 70) return "Muito bom! Continue se protegendo e informando!";
            if (percentage >= 50) return "Bom, mas atenção à prevenção!";
            return "Informação é a melhor prevenção!";
        }
    </script>
</body>
</html>
